{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@": ["src"],
			"@/*": ["src/"],
			"@controllers": ["src/controllers"],
			"@helpers": ["src/helpers"],
			"@middlewares": ["src/middlewares"],
			"@models": ["src/models"],
			"@routers": ["src/routers"],
			"@tools": ["src/tools"],
			"@controllers/*": ["src/controllers/"],
			"@helpers/*": ["src/helpers/"],
			"@middlewares/*": ["src/middlewares/"],
			"@models/*": ["src/models/"],
			"@routers/*": ["src/routers/"],
			"@tools/*": ["src/tools/"]
		}
	},
	"exclude": ["node_modules"],
	"compileOnSave": true
}
