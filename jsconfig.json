{
	"compilerOptions": {
		"baseUrl": "./src",
		"paths": {
			"@/*": ["."],
			"@controllers": ["controllers"],
			"@helpers": ["helpers"],
			"@middlewares": ["middlewares"],
			"@models": ["models"],
			"@routers": ["routers"],
			"@tools": ["tools"],
			"@controllers/*": ["controllers/"],
			"@helpers/*": ["helpers/"],
			"@middlewares/*": ["middlewares/"],
			"@models/*": ["models/"],
			"@routers/*": ["routers/"],
			"@tools/*": ["tools/"]
		}
	},
	"exclude": ["node_modules"],
	"compileOnSave": true
}
